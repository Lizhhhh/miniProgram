<!-- 1.小程序的数据绑定 -->
<view>Hello {{name}}</view>
<view>我的年龄: {{age + 1}}</view>

<!-- 2.列表展示:wx:for -->
<view wx:for="{{students}}">
  {{item.id}}: {{item.name}} - {{item.age}}
</view>


<!-- 3.事件监听改变data -->
<view>当前计数: {{counter}}</view>
<button bindtap="handleBtnClick">+</button>
<button bindtap="handleBtnSubstract">-</button>


<button size="mini">获取授权</button>